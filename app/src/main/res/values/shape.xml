<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Shape Appearance for small components like chips, buttons, text fields and FABs-->
    <style name="ShapeAppearance.Seller.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <!--Shape Appearance for medium components like cards, alert dialogs-->
    <style name="ShapeAppearance.Seller.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <!--Shape Appearance for large components like side and bottom navigation drawers-->
    <style name="ShapeAppearance.Seller.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearance.Seller.MinimizedSheet" parent="ShapeAppearance.Seller.MediumComponent">
        <item name="cornerSizeTopLeft">@dimen/minimized_sheet_top_left_radius</item>
    </style>

    <dimen name="minimized_sheet_top_left_radius">48dp</dimen>


</resources>