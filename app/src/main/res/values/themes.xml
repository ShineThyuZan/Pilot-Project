<!--        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.ChatApp.LargeComponent</item>-->

        <!--Material type attributes-->
        <item name="textAppearanceHeadline1">@style/TextAppearance.ChatApp.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.ChatApp.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.ChatApp.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.ChatApp.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.ChatApp.Headline5</item>
